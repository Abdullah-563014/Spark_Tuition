<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <layer-list>
            <item android:right="@dimen/_3sdp"
                android:top="@dimen/_3sdp">
                <shape>
                    <corners android:radius="@dimen/_50sdp" />
                    <solid android:color="#D6D6D6" />
                </shape>
            </item>
            <item
                android:bottom="@dimen/_1sdp"
                android:right="@dimen/_1sdp">
                <shape>
                    <gradient
                        android:angle="135"
                        android:endColor="@color/white"
                        android:startColor="#DDDBDB" />
                    <stroke
                        android:width="@dimen/_1sdp"
                        android:color="#BABABA" />
                    <corners
                        android:radius="@dimen/_50sdp" />
                    <padding
                        android:bottom="@dimen/_7sdp"
                        android:left="@dimen/_7sdp"
                        android:right="@dimen/_7sdp"
                        android:top="@dimen/_7sdp" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_pressed="true">
        <layer-list>
            <item android:right="@dimen/_3sdp"
                android:top="@dimen/_3sdp">
                <shape>
                    <corners android:radius="@dimen/_50sdp" />
                    <solid android:color="#135285" />
                </shape>
            </item>
            <item
                android:bottom="@dimen/_1sdp"
                android:right="@dimen/_1sdp">
                <shape>
                    <gradient
                        android:angle="90"
                        android:endColor="@color/green"
                        android:startColor="#255F8E" />
                    <stroke
                        android:width="@dimen/_1sdp"
                        android:color="#255F8E" />
                    <corners
                        android:radius="@dimen/_50sdp" />
                    <padding
                        android:bottom="@dimen/_7sdp"
                        android:left="@dimen/_7sdp"
                        android:right="@dimen/_7sdp"
                        android:top="@dimen/_7sdp" />
                </shape>
            </item>
        </layer-list>
    </item>

</selector>