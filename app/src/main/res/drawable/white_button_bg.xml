<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <layer-list>
            <item android:right="@dimen/_3sdp"
                android:top="@dimen/_3sdp">
                <shape>
                    <corners android:radius="@dimen/_50sdp" />
                    <solid android:color="@color/gray" />
                </shape>
            </item>
            <item
                android:bottom="@dimen/_1sdp"
                android:right="@dimen/_1sdp">
                <shape>
                    <solid android:color="@color/white" />
                    <stroke
                        android:width="@dimen/_1sdp"
                        android:color="@color/gray" />
                    <corners
                        android:radius="@dimen/_50sdp" />
                    <padding
                        android:bottom="@dimen/_7sdp"
                        android:left="@dimen/_7sdp"
                        android:right="@dimen/_7sdp"
                        android:top="@dimen/_7sdp" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_pressed="true">
        <layer-list>
            <item android:right="@dimen/_3sdp"
                android:top="@dimen/_3sdp">
                <shape>
                    <corners android:radius="@dimen/_50sdp" />
                    <solid android:color="@color/white" />
                </shape>
            </item>
            <item
                android:bottom="@dimen/_1sdp"
                android:right="@dimen/_1sdp">
                <shape>
                    <solid
                        android:color="@color/green" />
                    <stroke
                        android:width="@dimen/_1sdp"
                        android:color="@color/white" />
                    <corners
                        android:radius="@dimen/_50sdp" />
                    <padding
                        android:bottom="@dimen/_7sdp"
                        android:left="@dimen/_7sdp"
                        android:right="@dimen/_7sdp"
                        android:top="@dimen/_7sdp" />
                </shape>
            </item>
        </layer-list>
    </item>

</selector>