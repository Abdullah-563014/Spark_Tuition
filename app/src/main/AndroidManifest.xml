<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="habibur.rahman.spark.tuition">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".ui.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/Theme.SparkTuition.NoActionBar"
        android:usesCleartextTraffic="true"
        tools:ignore="UnusedAttribute">
        <activity android:name=".ui.profile.ProfileActivity"></activity>
        <activity android:name=".ui.live_support.LiveSupportActivity" />
        <activity android:name=".ui.previous_class_list.PreviousClassListActivity" />
        <activity android:name=".ui.class_details.ClassDetailsActivity" />
        <activity android:name=".ui.forgot_password.ForgotPasswordActivity" />
        <activity android:name=".ui.splash.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.main.MainActivity" />
        <activity android:name=".ui.tutors_list.TutorsListActivity" />
        <activity android:name=".ui.class_list.ClassListActivity" />
        <activity android:name=".ui.login.LoginActivity" />
        <activity android:name=".ui.registration.RegistrationActivity" />
        <activity
            android:name=".ui.player.PlayerActivity"
            android:configChanges="keyboard|orientation|screenLayout|screenSize" />
    </application>

</manifest>